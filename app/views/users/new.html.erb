<h1>Sign up</h1>

<form action="<%= users_url %>" method="post">
	<%= auth_token %>
	<label for="user_email" >email 
		<input type="text"
					 id="user_email" 
					 name="user[email]" 
					 value="<%= @user.email %>">
	</label>
	<label for="user_password">password
		<input type="password"
					 id="user_password" 
					 name="user[password]">
	</label> 
	<input type="submit" value="Let's go!">
</form>