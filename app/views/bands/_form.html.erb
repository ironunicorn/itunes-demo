<% action_url = @band.persisted? ? band_url(@band) : bands_url %>
<% method_type = @band.persisted? ? "patch" : "post" %>
<% submit_text = @band.persisted? ? "Update Band" : "Create Band" %>

<form action="<%= action_url %>" method="post">
	<%= auth_token %>
	<input type="hidden" name="_method" value="<%= method_type %>">
	<label>Band Name 
		<input type="text"
					 name="band[name]">
	</label>
	<input type="submit" value="<%= submit_text %>">
</form>